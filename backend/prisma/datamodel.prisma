type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Product {
  id: ID! @unique
  title: String!
  slug: String!
  description: String!
  productImages: [ProductImage!]!
    @relation(name: "ProductImage", onDelete: CASCADE)
  price: Int!
  available: Boolean! @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
  category: Category!
  productVariants: [ProductVariant!]!
}

type Category {
  id: ID! @unique
  name: String!
  slug: String!
  description: String!
  productsInCategory: [Product!]!
}

type ProductVariant {
  id: ID! @unique
  name: String!
  sku: String!
  product: Product
}

