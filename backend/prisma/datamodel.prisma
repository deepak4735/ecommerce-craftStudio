type Stock {
  id: ID! @unique
  quantity: Int!
  quantityAllocated: Int
  variant: ProductVariant
  location: StockLocation!
}

type StockLocation {
  id: ID! @unique
  name: String!
}

type ProductImage {
  id: ID! @unique
  title: String!
  thumbnail: String
  image: String!
  largeImage: String!
  product: Product! @relation(name: "ProductImage", onDelete: CASCADE)
}

