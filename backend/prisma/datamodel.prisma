enum Permission {
  ADMIN
  EMPLOYEE
  USER
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Product {
  id: ID! @unique
  title: String!
  description: String!
  productImages: [ProductImage!]!
  price: Int!
  available: Boolean @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
}

